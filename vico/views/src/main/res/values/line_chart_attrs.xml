<resources>
    <attr name="lineLayerStyle" format="reference" />
    <attr name="line1Spec" format="reference" />
    <attr name="line2Spec" format="reference" />
    <attr name="line3Spec" format="reference" />

    <declare-styleable name="LineCartesianLayerStyle">
        <attr name="line1Spec" />
        <attr name="line2Spec" />
        <attr name="line3Spec" />
        <attr name="spacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LineSpec">
        <attr name="color" />
        <attr name="positiveColor" />
        <attr name="negativeColor" />
        <attr name="gradientTopColor" format="color" />
        <attr name="gradientBottomColor" format="color" />
        <attr name="positiveGradientTopColor" format="color" />
        <attr name="positiveGradientBottomColor" format="color" />
        <attr name="negativeGradientTopColor" format="color" />
        <attr name="negativeGradientBottomColor" format="color" />
        <attr name="pointSize" format="dimension" />
        <attr name="lineThickness" format="dimension" />
        <attr name="pointStyle" format="reference" />
        <attr name="cubicStrength" format="fraction" />
        <attr name="showDataLabels" />
        <attr name="dataLabelStyle" />
        <attr name="dataLabelVerticalPosition" />
        <attr name="dataLabelRotationDegrees" />
    </declare-styleable>

    <declare-styleable name="ComponentStyle">
        <attr name="color"/>
        <attr name="shapeStyle" />
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
        <attr name="overlayingComponentStyle" format="reference"/>
        <attr name="overlayingComponentPadding" format="dimension"/>
    </declare-styleable>
</resources>
