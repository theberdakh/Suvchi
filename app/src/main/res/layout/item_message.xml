<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_message_3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/background_card"
        app:layout_constraintTop_toBottomOf="@id/card_message_2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Tasdiqangan suv foydalanishi"
                android:textColor="@color/color_txt"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/miqdor_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="Miqdor"
                android:textColor="@color/color_txt"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_card_3" />


            <TextView
                android:id="@+id/Manba_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="Ma`nba"
                android:textColor="@color/color_txt"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/miqdor_x" />


            <TextView
                android:id="@+id/Maydon_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="Maydon"
                android:textColor="@color/color_txt"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Manba_x" />

            <TextView
                android:id="@+id/vaqt_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="Vaqt"
                android:textColor="@color/color_txt"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Maydon_x" />


            <TextView
                android:id="@+id/txt_miqdor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="198m*m"
                android:textColor="@color/color_txt"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/miqdor_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_card_3"
                app:layout_constraintTop_toTopOf="@id/miqdor_x"/>

            <TextView
                android:id="@+id/txt_manba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Qarasiyroq"
                android:textColor="@color/color_txt"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/Manba_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_card_3"
                app:layout_constraintTop_toTopOf="@id/Manba_x"/>


            <TextView
                android:id="@+id/txt_Maydon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="B2"
                android:textColor="@color/color_txt"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/Maydon_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_card_3"
                app:layout_constraintTop_toTopOf="@id/Maydon_x"/>


             <TextView
                android:id="@+id/txt_vaqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="16:00 - 20:00"
                android:textColor="@color/color_txt"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/vaqt_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_card_3"
                app:layout_constraintTop_toTopOf="@id/vaqt_x"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>