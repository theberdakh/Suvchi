<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    android:background="@drawable/shape_chart_card"
    android:layout_margin="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17-fevral, 2024"
            android:textColor="@color/color_txt"
            android:textAppearance="?textAppearanceTitleLarge"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />


        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="9:00-13:00"
            android:gravity="center"
            android:layout_alignTop="@+id/date"
            android:layout_alignBottom="@+id/date"
            android:textColor="@color/color_txt"
            android:textAppearance="?textAppearanceBodyLarge" />

    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Vaqt"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6 soat"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hajmi"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="198 m3"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="O'rtacha tezlik"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="17 km/soat"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ja'mi suv olingan vaqt"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9:00 - 20:00"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Summa"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="212,000 so'm"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@color/color_text_secondary"
                android:textAppearance="?textAppearanceBody1" />


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_accept_decline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/button_decline"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            app:cornerRadius="12dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#DE7273"
            android:layout_gravity="end"
            android:text="Rad etish"/>

        <Button
            android:id="@+id/button_accept"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            app:cornerRadius="12dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:backgroundTint="#4DAD52"
            android:layout_gravity="start"
            android:text="Tasdiqlash"/>

    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/button_accepted"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        app:cornerRadius="12dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_primary_variant"
        android:layout_gravity="start"
        android:text="Tasdiqlandi"/>




</LinearLayout>