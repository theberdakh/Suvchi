<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    android:background="@drawable/shape_chart_card"
    android:layout_margin="8dp"
    android:paddingVertical="8dp">



    <LinearLayout
        android:id="@+id/layout_file"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="8dp"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/round_file_24" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textview_file_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fayl name"
                    android:textColor="@color/color_txt"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/textview_file_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 MB"
                    android:textColor="@color/color_txt"
                    android:textStyle="bold" />




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>






    <LinearLayout
        android:id="@+id/layout_accept_decline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/button_decline"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            app:cornerRadius="12dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#DE7273"
            android:layout_gravity="end"
            android:text="Rad etish"/>

        <Button
            android:id="@+id/button_accept"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            app:cornerRadius="12dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:backgroundTint="#4DAD52"
            android:layout_gravity="start"
            android:text="Tasdiqlash"/>

    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/button_accepted"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        app:cornerRadius="12dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_primary_variant"
        android:layout_gravity="start"
        android:text="Tasdiqlandi"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginHorizontal="8dp"/>




</LinearLayout>